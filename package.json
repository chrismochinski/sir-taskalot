{
  "main": "electron/main.cjs",
  "name": "sir-taskalot",
  "private": true,
  "version": "1.0.0",
  "description": "Sir Taskalot: A friendly desktop ticket creator and notifier for CharacterStrong Marketing requests.",
  "author": "Chris 'Mo' Mochinski <mo@characterstrong.com>",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"cross-env ELECTRON_ENABLE_LOGGING=true electron .\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mantine/core": "^6.0.21",
    "@mantine/hooks": "^6.0.21",
    "@mantine/styles": "^6.0.21",
    "@mantine/tiptap": "^6.0.21",
    "@tiptap/extension-link": "^2.11.7",
    "@tiptap/pm": "^2.11.7",
    "@tiptap/react": "^2.11.7",
    "@tiptap/starter-kit": "^2.11.7",
    "dotenv": "^16.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "undici": "^7.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/electron": "^1.4.38",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1"
  },
  "build": {
    "appId": "com.characterstrong.sirtaskalot",
    "productName": "Sir Taskalot",
    "mac": {
      "icon": "build/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/",
      "electron/",
      "preload.js",
      "main.cjs",
      "ipcHandlers.cjs",
      "node_modules/",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/",
        "to": "public"
      }
    ]
  }
}
